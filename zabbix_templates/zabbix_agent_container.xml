                    <username/>
                    <password/>
                    <publickey/>
                    <privatekey/>
                    <port/>
                    <description>Monitors ICMP ping response status (0=down, 1=up)</description>
                    <inventory_link>0</inventory_link>
                    <applications>
                        <application>
                            <name>ICMP</name>
                        </application>
                    </applications>
                    <valuemap>
                        <name>Service state</name>
                    </valuemap>
                    <logtimefmt/>
                    <preprocessing/>
                    <jmx_endpoint/>
                    <master_item/>
                </item>
                
                <!--
                  ==============================================================================
                  ICMP PACKET LOSS
                  ==============================================================================
                  Tracks percentage of ICMP packets lost during ping monitoring
