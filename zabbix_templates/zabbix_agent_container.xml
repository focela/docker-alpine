            </applications>
            
            <!--
              ==============================================================================
              CONTAINER MONITORING ITEMS
              ==============================================================================
              Five key metrics: hostname, OS, agent ping, version, and upgradable packages
            -->
            <items>
                <!--
                  ==============================================================================
                  CONTAINER HOSTNAME
                  ==============================================================================
                  Collects the hostname of the container for identification purposes
                -->
                <item>
                    <uuid>i9abc123def456789ab1234567890123</uuid>
                    <name>Hostname of Container</name>
                    <type>0</type>
                    <snmp_community/>
                    <snmp_oid/>
                    <key>agent.hostname</key>
                    <delay>1h</delay>
                    <history>1w</history>
                    <trends>0</trends>
                    <status>0</status>
                    <value_type>1</value_type>
                    <allowed_hosts/>
                    <units/>
                    <snmpv3_contextname/>
                    <snmpv3_securityname/>
                    <snmpv3_securitylevel>0</snmpv3_securitylevel>
                    <snmpv3_authprotocol>0</snmpv3_authprotocol>
                    <snmpv3_authpassphrase/>
                    <snmpv3_privprotocol>0</snmpv3_privprotocol>
                    <snmpv3_privpassphrase/>
                    <params/>
                    <ipmi_sensor/>
                    <authtype>0</authtype>
                    <username/>
                    <password/>
                    <publickey/>
                    <privatekey/>
                    <port/>
                    <description>Container hostname for identification and inventory tracking</description>
                    <inventory_link>3</inventory_link>
                    <applications>
                        <application>
                            <name>Zabbix agent</name>
                        </application>
                    </applications>
                    <valuemap/>
                    <logtimefmt/>
                    <preprocessing/>
                    <jmx_endpoint/>
                    <master_item/>
                </item>
                
                <!--
                  ==============================================================================
                  CONTAINER OPERATING SYSTEM
                  ==============================================================================
                  Identifies the operating system running inside the container
                -->
                <item>
                    <uuid>jabc123def456789ab12345678901234</uuid>
                    <name>Container OS</name>
                    <type>0</type>
                    <snmp_community/>
                    <snmp_oid/>
                    <key>agent.os</key>
                    <delay>6h</delay>
                    <history>30d</history>
                    <trends>0</trends>
                    <status>0</status>
                    <value_type>1</value_type>
                    <allowed_hosts/>
                    <units/>
                    <snmpv3_contextname/>
                    <snmpv3_securityname/>
                    <snmpv3_securitylevel>0</snmpv3_securitylevel>
                    <snmpv3_authprotocol>0</snmpv3_authprotocol>
                    <snmpv3_authpassphrase/>
                    <snmpv3_privprotocol>0</snmpv3_privprotocol>
                    <snmpv3_privpassphrase/>
                    <params/>
                    <ipmi_sensor/>
                    <authtype>0</authtype>
                    <username/>
                    <password/>
                    <publickey/>
                    <privatekey/>
                    <port/>
                    <description>Operating system identification for container environment</description>
                    <inventory_link>5</inventory_link>
                    <applications>
                        <application>
                            <name>Zabbix agent</name>
                        </application>
                    </applications>
                    <valuemap/>
                    <logtimefmt/>
                    <preprocessing/>
                    <jmx_endpoint/>
                    <master_item/>
                </item>
                
                <!--
                  ==============================================================================
                  ZABBIX AGENT AVAILABILITY
                  ==============================================================================
                  Monitors Zabbix agent availability and responsiveness
                -->
                <item>
                    <uuid>kbc123def456789ab123456789012345</uuid>
                    <name>Zabbix Agent ping</name>
                    <type>0</type>
                    <snmp_community/>
                    <snmp_oid/>
                    <key>agent.ping</key>
                    <delay>1m</delay>
                    <history>1w</history>
                    <trends>365d</trends>
                    <status>0</status>
                    <value_type>3</value_type>
                    <allowed_hosts/>
                    <units/>
                    <snmpv3_contextname/>
                    <snmpv3_securityname/>
                    <snmpv3_securitylevel>0</snmpv3_securitylevel>
                    <snmpv3_authprotocol>0</snmpv3_authprotocol>
                    <snmpv3_authpassphrase/>
                    <snmpv3_privprotocol>0</snmpv3_privprotocol>
                    <snmpv3_privpassphrase/>
                    <params/>
                    <ipmi_sensor/>
                    <authtype>0</authtype>
                    <username/>
                    <password/>
                    <publickey/>
                    <privatekey/>
                    <port/>
                    <description>The agent always returns 1 for this item. It could be used in combination with nodata() for availability check.</description>
                    <inventory_link>0</inventory_link>
                    <applications>
                        <application>
                            <name>Zabbix agent</name>
                        </application>
                    </applications>
                    <valuemap>
                        <name>Zabbix agent ping status</name>
                    </valuemap>
                    <logtimefmt/>
                    <preprocessing/>
                    <jmx_endpoint/>
                    <master_item/>
                </item>
                
                <!--
                  ==============================================================================
                  ZABBIX AGENT VERSION
                  ==============================================================================
                  Tracks the version of Zabbix agent running in the container
                -->
                <item>
                    <uuid>lc123def456789ab1234567890123456</uuid>
                    <name>Zabbix Agent Version</name>
                    <type>0</type>
                    <snmp_community/>
                    <snmp_oid/>
                    <key>agent.version</key>
                    <delay>1h</delay>
                    <history>1w</history>
                    <trends>0</trends>
                    <status>0</status>
                    <value_type>1</value_type>
                    <allowed_hosts/>
                    <units/>
                    <snmpv3_contextname/>
                    <snmpv3_securityname/>
                    <snmpv3_securitylevel>0</snmpv3_securitylevel>
                    <snmpv3_authprotocol>0</snmpv3_authprotocol>
                    <snmpv3_authpassphrase/>
                    <snmpv3_privprotocol>0</snmpv3_privprotocol>
                    <snmpv3_privpassphrase/>
                    <params/>
                    <ipmi_sensor/>
                    <authtype>0</authtype>
                    <username/>
                    <password/>
                    <publickey/>
                    <privatekey/>
                    <port/>
                    <description>Zabbix agent version for compatibility and security tracking</description>
                    <inventory_link>0</inventory_link>
                    <applications>
                        <application>
                            <name>Zabbix agent</name>
                        </application>
                    </applications>
                    <valuemap/>
                    <logtimefmt/>
                    <preprocessing/>
                    <jmx_endpoint/>
                    <master_item/>
                </item>
                
                <!--
                  ==============================================================================
                  PACKAGE UPDATE MONITORING
                  ==============================================================================
                  Tracks available package updates for container maintenance
                -->
                <item>
                    <uuid>m123def456789ab12345678901234567</uuid>
                    <name>Upgradable Packages</name>
                    <type>0</type>
                    <snmp_community/>
                    <snmp_oid/>
                    <key>packages.upgradable</key>
                    <delay>6h</delay>
                    <history>90d</history>
                    <trends>365d</trends>
                    <status>0</status>
                    <value_type>3</value_type>
                    <allowed_hosts/>
                    <units/>
                    <snmpv3_contextname/>
                    <snmpv3_securityname/>
                    <snmpv3_securitylevel>0</snmpv3_securitylevel>
                    <snmpv3_authprotocol>0</snmpv3_authprotocol>
                    <snmpv3_authpassphrase/>
