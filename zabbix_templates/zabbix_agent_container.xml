                    <inventory_link>0</inventory_link>
                    <applications>
                        <application>
                            <name>ICMP</name>
                        </application>
                    </applications>
                    <valuemap/>
                    <logtimefmt/>
                    <preprocessing/>
                    <jmx_endpoint/>
                    <master_item/>
                </item>
                
                <!--
                  ==============================================================================
                  ICMP RESPONSE TIME
                  ==============================================================================
                  Measures average response time for ICMP ping requests in seconds
                -->
