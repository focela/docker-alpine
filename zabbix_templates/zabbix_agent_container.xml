                <item>
                    <uuid>g789abc123def456789ab12345678901</uuid>
                    <name>ICMP loss</name>
                    <type>3</type>
                    <snmp_community/>
                    <snmp_oid/>
                    <key>icmppingloss</key>
                    <delay>1m</delay>
                    <history>1w</history>
                    <trends>365d</trends>
