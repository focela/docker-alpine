                    <inventory_link>0</inventory_link>
                    <applications>
                        <application>
                            <name>Packages</name>
                        </application>
                    </applications>
                    <valuemap/>
                    <logtimefmt/>
                    <preprocessing/>
                    <jmx_endpoint/>
                    <master_item/>
                </item>
            </items>
            <discovery_rules/>
            <httptests/>
            <macros/>
            <templates/>
            <screens/>
        </template>
    </templates>
    
    <!--
      ==============================================================================
      MONITORING TRIGGERS
      ==============================================================================
      Defines alert conditions for network connectivity and container health
    -->
    <triggers>
        <!--
          ==============================================================================
          ICMP CONNECTIVITY TRIGGERS
          ==============================================================================
          Alerts for network connectivity issues and performance degradation
        -->
        <trigger>
            <uuid>n23def456789ab123456789012345678</uuid>
            <expression>{Service - ICMP:icmpping.max(3m)}=0</expression>
            <recovery_mode>0</recovery_mode>
            <recovery_expression/>
            <name>Cannot be pinged</name>
            <correlation_mode>0</correlation_mode>
            <correlation_tag/>
            <url/>
            <status>0</status>
            <priority>5</priority>
            <description>Container host is not responding to ICMP ping requests</description>
            <type>0</type>
            <manual_close>0</manual_close>
            <dependencies/>
            <tags/>
        </trigger>
        
        <trigger>
            <uuid>o3def456789ab1234567890123456789</uuid>
            <expression>{Service - ICMP:icmppingloss.min(10m)}&gt;50</expression>
            <recovery_mode>0</recovery_mode>
            <recovery_expression/>
            <name>Ping loss is too high</name>
            <correlation_mode>0</correlation_mode>
            <correlation_tag/>
            <url/>
            <status>0</status>
            <priority>4</priority>
            <description>High packet loss indicates network connectivity issues</description>
            <type>0</type>
            <manual_close>0</manual_close>
            <dependencies>
                <dependency>
                    <name>Cannot be pinged</name>
                    <expression>{Service - ICMP:icmpping.max(3m)}=0</expression>
                    <recovery_expression/>
                </dependency>
            </dependencies>
            <tags/>
        </trigger>
        
        <trigger>
            <uuid>pdef456789ab12345678901234567890</uuid>
            <expression>{Service - ICMP:icmppingsec.avg(2m)}&gt;5</expression>
            <recovery_mode>0</recovery_mode>
            <recovery_expression/>
            <name>Ping Response time is too high</name>
            <correlation_mode>0</correlation_mode>
            <correlation_tag/>
            <url/>
            <status>0</status>
            <priority>4</priority>
            <description>High response time indicates network performance issues (threshold: 5 seconds)</description>
            <type>1</type>
            <manual_close>0</manual_close>
            <dependencies>
                <dependency>
                    <name>Cannot be pinged</name>
                    <expression>{Service - ICMP:icmpping.max(3m)}=0</expression>
                    <recovery_expression/>
                </dependency>
            </dependencies>
            <tags/>
        </trigger>
        
        <!--
          ==============================================================================
          CONTAINER HEALTH TRIGGERS
          ==============================================================================
          Alerts for container-specific issues and maintenance requirements
        -->
        <trigger>
            <uuid>qef456789ab123456789012345678901</uuid>
            <expression>{Zabbix - Container Agent:packages.upgradable.last()}&gt;0</expression>
            <recovery_mode>0</recovery_mode>
            <recovery_expression/>
            <name>Upgraded Packages in Container Available</name>
            <correlation_mode>0</correlation_mode>
            <correlation_tag/>
            <url/>
            <status>0</status>
            <priority>1</priority>
            <description>Container has packages available for upgrade</description>
            <type>0</type>
            <manual_close>0</manual_close>
            <dependencies/>
            <tags/>
        </trigger>
        
        <trigger>
            <uuid>rf456789ab1234567890123456789012</uuid>
            <expression>{Zabbix - Container Agent:agent.ping.nodata(3m)}=1</expression>
            <recovery_mode>0</recovery_mode>
            <recovery_expression/>
            <name>Zabbix agent is unreachable</name>
            <correlation_mode>0</correlation_mode>
            <correlation_tag/>
            <url/>
            <status>0</status>
            <priority>5</priority>
            <description>Zabbix agent in container is not responding</description>
            <type>0</type>
            <manual_close>0</manual_close>
            <dependencies/>
            <tags/>
        </trigger>
    </triggers>
    
    <!--
      ==============================================================================
      VALUE MAPPINGS
      ==============================================================================
      Provides human-readable values for numeric status codes
    -->
    <value_maps>
        <!--
          ==============================================================================
          SERVICE STATE MAPPING
          ==============================================================================
          Maps numeric service states to human-readable values
        -->
        <value_map>
            <uuid>s456789ab12345678901234567890123</uuid>
            <name>Service state</name>
            <mappings>
                <mapping>
                    <value>0</value>
                    <newvalue>Down</newvalue>
                </mapping>
                <mapping>
                    <value>1</value>
                    <newvalue>Up</newvalue>
                </mapping>
            </mappings>
        </value_map>
        
        <!--
          ==============================================================================
          ZABBIX AGENT STATUS MAPPING
          ==============================================================================
          Maps Zabbix agent ping status to human-readable values
        -->
        <value_map>
            <uuid>t56789ab123456789012345678901234</uuid>
            <name>Zabbix agent ping status</name>
            <mappings>
                <mapping>
                    <value>1</value>
                    <newvalue>Up</newvalue>
                </mapping>
            </mappings>
        </value_map>
    </value_maps>
</zabbix_export>
